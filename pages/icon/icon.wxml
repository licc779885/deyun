<view class="page">
    <view class="page__hd">
        <text class="page__title">icon</text>
        <text class="page__desc">icon图标</text>
    </view>
    <view class="page__bd">
        <view class="section section_gap">
            <view class="group">
                <icon size="{{item}}" type="success" wx:for="{{iconSize}}"></icon>
            </view>
        </view>
        <view class="section section_gap">
            <view class="group">
                <icon size="45" type="{{item}}" wx:for="{{iconType}}"></icon>
            </view>
        </view>
        <view class="section section_gap">
            <view class="group">
                <icon color="{{item}}" size="45" type="success" wx:for="{{iconColor}}"></icon>
            </view>
        </view>
    </view>
</view>
