page {
    background: #f8f8f8;
    padding-top: 87rpx;
}

.coupon .main {
    padding-top: 20rpx;
}

.coupon .main .li {
    background: #fff;
    flex-wrap: wrap;
    display: flex;
    box-sizing: border-box;
    padding: 10rpx 0rpx;
    margin: 0rpx 20rpx 20rpx 20rpx;
    border: 1rpx solid #d9d9d9;
    border-radius: 8rpx;
    align-items: center;
}

.coupon .cc {
    flex: 1;
}

.coupon .image {
    display: block;
    height: 100rpx;
    width: 100rpx;
    margin: 0rpx 20rpx;
}

.coupon .rr {
    flex: 1;
}

.coupon .r1 {
    color: #666;
    padding-top: 5rpx;
    padding-right: 20rpx;
}

.coupon .r2 {
    font-size: 32rpx;
    padding: 10rpx 20rpx 15rpx 0rpx;
}

.coupon .r3 {
    padding-top: 10rpx;
    border-top: 1rpx dotted #d9d9d9;
    color: #888;
}

.coupon .past {
    opacity: 0.7;
}