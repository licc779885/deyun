page {
    background: #f8f8f8;
}

.box {
    background: #fff;
    display: flex;
}

.box .li {
    box-sizing: border-box;
    flex: 1;
    text-align: center;
    margin: 30rpx 0rpx;
}

.box .border {
    border-left: 1rpx solid #d9d9d9;
}

.box .li1 {
    display: block;
    font-size: 48rpx;
    padding-bottom: 10rpx;
}

.box .li2 {
    display: block;
    color: #666;
}

.images {
    width: 750rpx;
    border-bottom: 1rpx solid #d9d9d9;
    border-top: 1rpx solid #d9d9d9;
}

.info {
    border-top: 1rpx solid #d9d9d9;
    background: #fff;
    margin-top: 10rpx;
    padding: 0rpx 10rpx 10rpx 10rpx;
}

.title {
    border-bottom: 1rpx solid #f0f0f0;
    padding: 10rpx 0rpx;
    line-height: 20rpx;
}

.con {
    line-height: 20rpx;
    padding-bottom: 10rpx;
}

.info2 {
    background: #f8f8f8;
    padding: 10rpx;
    border-radius: 5rpx;
    line-height: 25rpx;
}

.line {
    padding: 10rpx 0rpx;
    text-align: justify;
    border-bottom: 1rpx dotted #f0f0f0;
}

.t1 {
    float: left;
    width: 60rpx;
}

.t2 {
    margin-left: 60rpx;
}