page {
    background: #f8f8f8;
    margin-top: 87rpx;
}

.container {
    width: 750rpx;
    overflow: hidden;
    padding-bottom: 20rpx;
}

.container .ul {
    margin-top: 20rpx;
    border-top: 1rpx solid #d9d9d9;
    border-bottom: 1rpx solid #d9d9d9;
    font-size: 24rpx;
    background: #fff;
}

.container .head {
    width: 710rpx;
    line-height: 80rpx;
    margin: 0rpx 20rpx 0rpx 20rpx;
    border-bottom: 1rpx solid #d9d9d9;
    font-size: 28rpx;
}

.container .main {
    width: 730rpx;
    display: flex;
    flex-wrap: wrap;
    padding: 0rpx 20rpx 20rpx 0rpx;
}

.container .li {
    width: 162.5rpx;
    background: #f8f8f8;
    margin-left: 20rpx;
    margin-top: 20rpx;
}

.container image {
    width: 162.5rpx;
    height: 162.5rpx;
    display: block;
}

.container text {
    width: 100%;
    display: block;
    line-height: 60rpx;
    text-align: center;
}

.category {
    background: #FFF;
    height: 91vh;
    overflow: hidden;
    display: block;
}

.m_header {
    width: 100%;
    height: 45rpx;
    padding-right: 15rpx;
    box-sizing: border-box;
    background: #fff;
    line-height: 45rpx;
    font-size: 18rpx;
}

.span {
    display: inline-block;
    width: 16rpx;
    height: 24rpx;
    float: left;
    margin-left: 10rpx;
    font-size: 30rpx;
}

.i {
    font-size: 16rpx;
    float: right;
    font-style: normal;
}

.rootlists {
    height: 100%;
    overflow-y: hidden;
    width: 24%;
    float: left;
    background: #fff;
}

.rootlists .rootList {
}

.category-content {
    float: right;
    height: 100%;
    overflow-y: scroll;
    width: 76%;
    padding: 10rpx;
    box-sizing: border-box;
    background: #eee;
}

.carcontent {
    width: 100%;
    word-wrap: break-word;
}

.carcontent image {
    width: 100%;
}

.carcontent .sote image {
    padding-top: 10rpx;
    padding-right: 15rpx;
    width: 17vw;
    height: 17vw;
}

.carcontent .categoryItem {
    flex: 33%;
    flex-grow: 0;
    text-align: center;
    padding: 0 2rpx;
    box-sizing: border-box;
}

.carcontent .categoryItem .thumb image {
    padding-top: 10rpx;
    width: 17vw;
    height: 17vw;
}

.carcontent .sote {
    width: 100%;
    background: #FFF;
    margin-top: 10rpx;
    text-align: center;
    padding: 0 10rpx;
    box-sizing: border-box;
    display: flex;
    flex-wrap: wrap;
}

.titleH3 {
    font-weight: bold;
    padding-top: 10rpx;
    font-size: .8rem;
    color: #333;
    line-height: .8rem;
}

.bottom {
    width: 100%;
    box-sizing: border-box;
    padding: 15rpx;
    border-top: 1rpx solid #eaeaea;
    position: fixed;
    bottom: 0;
    background: #fff;
    font-size: 18rpx;
    text-align: left;
    line-height: 40rpx;
}

.rootList {
    width: 100%;
    background: #FFF;
    font-size: .6rem;
    margin-bottom: 50rpx;
}

.rootList view {
    line-height: 40rpx;
    border-bottom: 1rpx solid #e5e5e5;
    color: #333;
    text-align: center;
}

.rootlists .rootList .zhong {
    background: #ffffff;
    border-left: 2rpx solid red;
    color: #f15353;
}

.active {
    background: #eee;
    color: #f15353;
}

.li {
    line-height: 40rpx;
    border-bottom: solid 1rpx #e5e5e5;
    color: #333;
}